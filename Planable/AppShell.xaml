<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Planable.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Planable"
    Title="Planable"
    NavBarIsVisible="False">

    <TabBar>
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="How to budget"
        ContentTemplate="{DataTemplate local:PageBudget}"
        Route="PageBudget"/>
    <ShellContent
        Title="Finance Calculator"
        ContentTemplate="{DataTemplate local:FinanceCalculator}"
        Route="FinanceCalculator"/>
    <ShellContent
        Title="About us"
        ContentTemplate="{DataTemplate local:AboutUs}"
        Route="AboutUs"/>
    <ShellContent
        Title="Your finance"
        ContentTemplate="{DataTemplate local:MyFinancePage}"
        Route="MyFinancePage"/>
    </TabBar>

    
</Shell>
